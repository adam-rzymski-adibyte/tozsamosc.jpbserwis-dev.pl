<details class="text-center">
  <summary>(Kliknij aby rozwinąć) informacje DIAGNOSTYCZNE</summary>

  {% if session %}
    <div class="mt-3">
      <div class="card-body">
        <h5 class="card-title">SESSION</h5>
        <hr>
        <p class="card-text">{{ session | safe }}</p>
      </div>
    </div>
  {% endif %}

  <div class="mt-3">
    <div class="card-body m">
      <h5 class="card-title">PARAMS</h5>
      <hr>
      <p class="card-text">{{ dbg.params | safe }}</p>
    </div>
  </div>

  <div class="mt-3">
    <div class="card-body">
      <h5 class="card-title">PROMPT</h5>
      <hr>
      <p class="card-text">{{ dbg.prompt | safe }}</p>
    </div>
  </div>

  <div class="mt-3">
    <div class="card-body">
      <h5 class="card-title">FLAGS</h5>
      <hr>
      <p class="card-text">{{ dbg.flags | safe }}</p>
    </div>
  </div>

  <div class="mt-3">
    <div class="card-body">
      <h5 class="card-title">BODY</h5>
      <hr>
      <p class="card-text">{{ dbg.body | safe }}</p>
    </div>
  </div>
</details>